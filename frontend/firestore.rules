rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Patient files - users can only access their own files
    match /patient-files/{fileId} {
      allow read, write, delete: if request.auth != null && 
        resource.data.patientName == request.auth.token.email;
      allow create: if request.auth != null && 
        request.resource.data.patientName == request.auth.token.email;
    }
    
    // Sensor data - read-only for authenticated users
    match /sensor_data/{dataId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend can write sensor data
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


