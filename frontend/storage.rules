rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Patient files - users can only access their own files
    match /patient-files/{patientName}/{fileName} {
      allow read, write, delete: if request.auth != null && 
        patientName == request.auth.token.email.replace('.', '_');
    }
    
    // Default deny all other files
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


